<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BookWeb" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/statusbar_color</item>
        <item name="colorPrimaryVariant">@color/toolbar_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/toolbar_color</item>
        <item name="colorSecondaryVariant">@color/toolbar_color</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.BookWeb.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.BookWeb.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.BookWeb.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CardView1">

        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="cardBackgroundColor">@color/cardbg</item>
        <item name="cardElevation">20dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="contentPadding">10dp</item>



    </style>
</resources>